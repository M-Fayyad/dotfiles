# Aliases

# some more ls aliases
alias ll='eza --group-directories-first --icons -lahg'
alias la='ls -A'
alias ls='eza --group-directories-first --no-user --no-time --icons --long'  

# alias for evince for pdf from terminal
alias pd='evince'
# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# for update system 
alias u='sudo apt update; sudo apt upgrade; flatpak update'


# batcat 
alias cat='batcat'

# zoxide 
# alias cd='z'

# clear 
alias c='clear'
# micro
alias m='micro'

alias bashrc="micro ~/.bashrc"

# counting items in the current directory 
alias count="ls * | wc -l"

# chezmoi
alias chm="chezmoi"
